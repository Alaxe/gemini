{
    "GAME_W": 800,
    "GAME_H": 500,
    "GRAVITY": 0,
    "CAMERA_INTERPOLATION": 0.1,
    "PLAYER_COUNT": 2,
    "Player": {
        "GRAVITY": 1600,
        "MAX_VELOCITY": {
            "x": 1000,
            "y": 1000
        },
        "WALK_VELOCITY": 600,
        "AIR_VELOCITY": 300,
        "JUMP_VELOCITY": 800,
        "JUMP_INTERVAL_MS": 750,
        "Label": {
            "fill": "#FFFFFF",
            "font": "12px Roboto",
            "widthPx": 96,
            "heightPx": 32
        }
    },
    "Network": {
        "INTERPOLATION_DELAY_MS": 200,
        "SIGNALS": ["diamondPickup", "joinError", "keyframeUpdate", "levelEnd",
            "lobbyError", "roomUpdate", "tileUpdate", "SFXPlay", "startGame"]
    },
    "LevelSelect": {
        "hCnt": 4,
        "vCnt": 4
    },
    "DiamondCounter": {
        "margin": 10,
        "textWidth": 1,
        "textHeight": 0.075,
        "textStyle": {
            "boundsAlignH": "left",
            "boundsAlignV": "middle",
            "font": "20px Roboto",
            "fill": "#FFFFFF"
        }
    },
    "LevelPreview": {
        "Button": {
            "Text": {
                "font": "20px Roboto",
                "fill": "#FFFFFF",
                "boundsAlignV": "middle",
                "hMargin": 30
            },
            "fill": 0x435668,
            "hover": 0x2D3A47
        },
        "width": 0.2,
        "height": 0.15,
        "defaultLevelData": {
            "title": "Select a Level",
            "passed": false,
            "perfect": false
        },
        "iconSize": 24,
        "iconOffset": 4
    },
    "Highlight": {
        "Y": {
            "min": -1,
            "max": -1
        },
        "X": {
            "min": 0,
            "max": 2
        },
        "color": 0xFFFFFF
    },
    "Level": {
        "COLLISION_TILE_ID": [21, 23, 24],
        "Hologram": {
            "ON": 23,
            "OFF": 22
        },
        "EXIT_BLOCK_ID": 24,
        "DIAMOND_ID": 25,
        "HelpText": {
            "font": "18px Roboto",
            "fill": "#FFFFFF"
        },
        "UNDERGROUND_RANGE": 3
    },
    "fonts": ["Roboto"],
    "Text": {
        "font": "25px Roboto",
        "fill": "#222",
        "wordWrap": true,
        "wordWrapWidth": 1000000,
        "boundsAlignH": "center",
        "align": "center",
        "hMargin": 0,
        "vMargin": 0
    },
    "Button": {
        "Text": {
            "boundsAlignH": "center",
            "boundsAlignV": "middle",
            "fill": "#FFFFFF"
        },
        "rectRadius": 10,
        "fill": 0x1C67FF,
        "hover": 0x0C5CFC,
        "width": 0.4,
        "height": 0.1,
        "vMargin": 4,
        "hMargin": 4
    },
    "Error": {
        "Text": {
            "fill": "#CC1414",
            "boundsAlignH": "center"
        },
        "timeout": 3000
    },
    "InputField": {
        "fill": "#222222",
        "borderColor": "#1C67FF",
        "borderRadius": 10,
        "backgroundColor": "#ffffff",
        "cursorColor": "#222222",
        "font": "20px Roboto",
        "height": 0.05,
        "width": 0.25,
        "padding": 5,
        "focusOutOnEnter": false,
        "blockInput": false,
        "max": 12
    },
    "ProgressBar": {
        "rectRadius": 10,
        "width": 0.6,
        "height": 0.1,
        "fill": 0x1C67FF,
        "background": 0xFFFFFF,
        "initialProgress": 0
    },
    "Background": {
        "menu": "#eee",
        "play": "#435668"
    },
    "Soundtrack": {
        "root": "../assets/music/",
        "tracks": ["menu", "level"],
        "fade": 1000,
        "volume": 0.2
    },
    "SFX": {
        "root": "../assets/sfx/",
        "effects": ["click", "jump", "pickup", "poweron", "poweroff",
                "teleport"],
        "volume": 0.5,
        "distanceScale": 0.02
    },
    "Loader": {
        "sprites": ["diamond", "cables", "platforms", "player", "tick"],
        "spritesRoot": "../assets/sprites/"
    }
}
